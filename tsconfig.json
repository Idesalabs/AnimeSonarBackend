{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "lib": [
            "es2016",
            "esnext.asynciterable",
            "esnext",
            "dom"
        ],
        "esModuleInterop": true,
        "strict": true,
        "module": "commonjs",
        "baseUrl": ".",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es2018",
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "typeRoots": [
        "./node_modules/@types",
        "./src/types"
    ],
    "types": [
        "node",
        "mocha"
    ],
    "include": [
        "src/**/*"
    ]
}